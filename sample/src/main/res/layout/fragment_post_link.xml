<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin">


    <EditText
        android:id="@+id/title_et"
        style="@style/SimpleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/title_tv" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/SimpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_et"
        android:layout_alignTop="@id/title_et"
        android:gravity="center_vertical"
        android:text="@string/title" />

    <EditText
        android:id="@+id/url_et"
        style="@style/SimpleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_et"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/title_tv"
        android:hint="@string/hint_required"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/url_tv"
        style="@style/SimpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/url_et"
        android:layout_alignTop="@id/url_et"
        android:gravity="center_vertical"
        android:text="@string/url" />


    <TextView
        android:id="@+id/description_tv"
        style="@style/SimpleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/url_et"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:text="@string/description" />

    <EditText
        android:id="@+id/description_et"
        style="@style/SimpleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/description_tv"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="top|center_horizontal" />

    <ImageView
        android:id="@+id/default_link_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/url_et"
        android:layout_alignEnd="@+id/url_et"
        android:layout_alignTop="@+id/url_et"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_content_paste_white_24dp" />

</RelativeLayout>